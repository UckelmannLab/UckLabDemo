extends layout

include mixins/_signParticipantForm
include mixins/_authParticipantForms

block content
  .inner
    if user
      .card 
        if user.level && user.level > 10
          p !{layout.message_code_logged_in_researcher}
        else 
          p #{layout.message_code_logged_in}

    if !user
      +signParticipantForm()
      if (!project && !code)
        +authParticipantForms(layout.auth_sign)
        p
        p !{layout.sign_message}
