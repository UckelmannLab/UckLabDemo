mixin project()

  h5 
    .headerLink !{l.project_projects_title}
  p.card-message 
    | #{l.project_projects_1}
    
  p.card-message 
    | #{l.project_projects_2}
  
  p.card-message 
    | #{l.project_projects_3}
  
  .videoTutorial
    video(controls='', src='/docs/video/2-create_study.webm')
  
  h5 
    .headerLink !{l.project_tasks_title}
  p.card-message 
    | #{l.project_tasks_1}
  
