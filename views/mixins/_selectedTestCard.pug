mixin selectedTestCard(test = {})
  .chosentest
    .choosetogle
      if user
        .store__action.store__action--heart
          form.heart(method="POST" action=`/api/tests/${test._id}/add`)
            - const testStrings = project.tests.map(obj => obj.toString())
            - const testClass = testStrings.includes(test._id.toString()) ? 'heart__button--hearted' : ''
            button.heart__button(type="submit" name="add" class=testClass)
              != h.icon('remove')
    .selectedtest
      .store__hero
        h2.title
          a(href=`/tests/test/${test.slug}` style='font-size:2rem') #{test.name}
        
